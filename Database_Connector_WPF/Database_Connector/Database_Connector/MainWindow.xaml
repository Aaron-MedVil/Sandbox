<Window x:Class="Database_Connector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Database Connector" MinHeight="450" MinWidth="800" WindowState="Maximized">

    <StackPanel>

        <!-- Label -->
        <Label>Pruebas conexión base datos</Label>
        
        <!-- DataGrid Data -->
        <DataGrid x:Name="dgPruebas" ItemsSource="{Binding Path=LoadDataBinding}">
            <DataGrid.Height>300</DataGrid.Height>
            <DataGrid.AutoGenerateColumns>False</DataGrid.AutoGenerateColumns>
            <DataGrid.CanUserAddRows>false</DataGrid.CanUserAddRows>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=id}" Header="Identificador" IsReadOnly="true" Width="1*"/>
                <DataGridTextColumn Binding="{Binding Path=nombre}" Header="Nombre" IsReadOnly="true" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal">
            <StackPanel.Margin>0, 10, 0, 0</StackPanel.Margin>
            <StackPanel.VerticalAlignment>Center</StackPanel.VerticalAlignment>
            <StackPanel.HorizontalAlignment>Center</StackPanel.HorizontalAlignment>
            
            <!-- Load Data Button -->
            <Button Click="Button_Click">
                <Button.Width>150</Button.Width>
                <Button.Height>50</Button.Height>
                <Button.Margin>0, 0, 10, 0</Button.Margin>
                <Button.Content>Cargar datos tabla</Button.Content>
            </Button>

            <!-- Get Data Button -->
            <Button Click="Button_Click_1">
                <Button.Width>150</Button.Width>
                <Button.Height>50</Button.Height>
                <Button.Margin>10, 0, 0, 0</Button.Margin>
                <Button.Content>Obtener Datos database</Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
